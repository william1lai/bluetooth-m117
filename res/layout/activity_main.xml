<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluetoothtest.MainActivity" >

    <TextView
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Set your preferences"
        android:textSize="24dp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/lv1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/head"
    	android:orientation="horizontal"
    	android:layout_marginTop="20dp"
    	android:weightSum="100" >
        
	    <TextView
	        android:id="@+id/textCat1"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Anime" />
	        
	    <SeekBar
	        android:id="@+id/sb1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv2"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv1"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
        
	    <TextView
	        android:id="@+id/textCat2"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Automobiles" />
	        
	    <SeekBar
	        android:id="@+id/sb2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv3"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv2"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
        
	    <TextView
	        android:id="@+id/textCat3"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Movies" />
	        
	    <SeekBar
	        android:id="@+id/sb3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>
        
    <LinearLayout
		android:id="@+id/lv4"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv3"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
                
	    <TextView
	        android:id="@+id/textCat4"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Music" />
	        
	    <SeekBar
	        android:id="@+id/sb4"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>

    <LinearLayout
		android:id="@+id/lv5"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv4"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
                
	    <TextView
	        android:id="@+id/textCat5"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Politics" />
	        
	    <SeekBar
	        android:id="@+id/sb5"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>
                
    <LinearLayout
		android:id="@+id/lv6"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv5"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
                
	    <TextView
	        android:id="@+id/textCat6"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Sports" />
	        
	    <SeekBar
	        android:id="@+id/sb6"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>
                    
    <LinearLayout
		android:id="@+id/lv7"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv6"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
                
	    <TextView
	        android:id="@+id/textCat7"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Technology" />
	        
	    <SeekBar
	        android:id="@+id/sb7"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>
                        
    <LinearLayout
		android:id="@+id/lv8"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/lv7"
    	android:orientation="horizontal"
    	android:layout_marginTop="10dp"
    	android:weightSum="100" >
                
	    <TextView
	        android:id="@+id/textCat8"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="25dp"
	        android:layout_weight="40"
	        android:text="Video Games" />
	        
	    <SeekBar
	        android:id="@+id/sb8"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="60"
	        android:max="100" />
    </LinearLayout>
    
</RelativeLayout>
